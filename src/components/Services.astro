<style>
/*main service componenet container*/
.component-services-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 20px; /* Space between the columns */
}

.component-service {
  position: relative; /* Necessary for the pseudo-element positioning */
  flex: 1;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  color: white;
  overflow: hidden; /* To ensure the pseudo-element stays within the bounds */
  padding: 20px; /* Optional: adds padding inside the component */
}

.component-service::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent overlay */
  z-index: 1;
}

.component-service * {
  position: relative;
  z-index: 2;
}

.community-header{
  font-size: 2em; 
}

.community-header-modal{
  font-size: 1.8em; 
}

/*modal background images*/
.component-service:first-of-type {
  background-image: url('/images/community-marketing.jpg'); 
}

.component-service:nth-of-type(2) {
  background-image: url('/images/community-building.jpg'); 
}

.component-service:nth-of-type(3) {
  background-image: url('/images/social-media.png'); 
}

.modal-page{
  display: flex;
  align-items: flex-start; /* Align items to the start of the container */
  gap: 5px; /* Space between image and text */
}

/*modal image sizing and styling*/
.modal-image {
  flex:1;
  width:100%; 
  height:250px; /* Maintain aspect ratio */
  border-radius: 8px; /* rounded corners for the image */
  flex-shrink: 0; /* Prevent image from shrinking */
}

.modal-text {
  flex: 1; /* Allow text to take remaining space */
  line-height: 1.0; /* Improve readability */
}

.modal-text h2{
  text-align:center;   
  text-decoration: underline;
  color: #F0F8FF;
}

.modal-page ul {
  list-style-type: none; /* Remove bullets */
  padding-left: 0; /* Remove padding */
  margin: 0; /* Remove margin */
}

.modal-page li {
  margin-bottom: 10px; /* Space between list items */
}

.modal-page .list-header{
  color:#FFD700;
}

/*modal content relative postioning*/
.modal-content {
  position: relative; 
  color: white;
  border: none;
  width: 100%;
  overflow: hidden; 
}

.modal-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent overlay */
  z-index: 1;
  pointer-events: none; /* Ensure interactions with the modal content are not blocked */
}

.modal-body,.modal-footer,.modal-header {
  position: relative;
  z-index: 2;
}

.modal-footer .btn-secondary {
  border: none;
}

.btn-close {
  color: #ffffff;
  background-color: white;
  opacity: 0.75;
  filter: invert(1);
}

.modal-height {
  min-height: 400px; 
}

/*LOCAL MEDIA QUERY*/
@media (max-width: 992px) {
.component-services-wrapper {
  flex-direction: column;
}
}
</style>

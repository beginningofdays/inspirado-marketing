---

import images from '/public/js/business.json'; // Ensure this path is correct relative to the component's location

---

<div class="flex-column component-business">
  {images.map((image, index) => (
    <div class="component-business-image" key={index}>
      <img src={image.src} alt={image.alt} class="banner-image" />
    </div>
  ))}
</div>


<style>
.component-business {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.component-business-image {
  margin: 10px 0;
}

.banner-image {
  width: 100%;
  max-width: 600px; /* Adjust as needed */
  height: auto;
  border-radius: 8px; /* Optional: add some border radius */
  box-shadow: 0 4px 8px rgba(0,0,0,0.2); /* Optional: add some shadow */
}
</style>
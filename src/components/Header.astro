---
const { imageURL } = Astro.props;
---

<header class="flex-row">
  <div class="menu" id="menu">
    <div class="component-logo">
      <a href="index.html">
        <img src="images/inspirado-logo1.png" alt="Inspirado Logo">
      </a>
    </div>
    <nav>
      <ul class="nav">
        <li><a href="work.html">OUR WORK</a></li>
        <li><a href="company.html">COMPANY</a></li>
        <li><a href="contact.html">CONTACT US</a></li>
        <li><a href="getstarted.html">GET STARTED</a></li>
        <li class="mobile-nav"><a href="#">MENU</a></li>
      </ul>
    </nav>
  </div>

  <div class="sliding-panel" id="slidingPanel">
    <ul class="panel-nav">
      <li><a href="work.html">OUR WORK</a></li>
      <li><a href="company.html">COMPANY</a></li>
      <li><a href="contact.html">CONTACT US</a></li>
      <li><a href="getstarted.html">GET STARTED</a></li>
    </ul>
  </div>
</header>

<div class="flex-column component-banner-container mb-3">
  <div class="component-banner-image">
    <img src={imageURL} alt="Banner Image" class="banner-image" />
    <div class="banner-overlay"></div>
    <div class="banner-content">
      <div class="banner-text">
        <h1><strong>FIND YOUR COMMUNITY AND INCREASE YOUR SALES</strong></h1>
        <p>Helping brands gain competitive edge within their targeted communties</p>
      </div>
      <a href="getstarted.html"><button type="button" class="banner-button">Let's Get Started</button></a>
    </div>
  </div>
</div>

<style>
/* General Styles */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

.flex-row {
  display: flex;
  justify-content: center;
  align-items: center;
}

.component-logo {
  background-color: white;
  margin: 0 auto;
  text-align: center;
  flex: 0 0 auto;
}

.component-logo img {
  max-width: 100%;
  height: auto;
  width: 200px; /* Adjust this value as necessary */
}

/* DESKTOP NAV BAR MENU STYLES */
.menu {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: black;
  width: 100%;
  height: 60px;
  padding: 0 15px;
}

.menu nav {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.menu .nav {
  display: flex;
  list-style: none;
}

.menu .nav li {
  display: none;
}

.menu .nav li a {
  text-decoration: none;
  color: white;
}

/* MOBILE NAV BAR MENU STYLES */
.menu .nav .mobile-nav {
  display: block;
  margin-right: 30px; /* Adjust the margin to your preference */
  z-index: 2000;
}

.sliding-panel {
  position: fixed;
  top: 0;
  left: 100%;
  width: 100%;
  height: 100%;
  background: black;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: left 0.3s ease;
  z-index: 1000;
}

.sliding-panel.active {
  top: 0;
  left: 0;
}

.panel-nav {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: center;
}

.panel-nav li {
  display: block;
  margin: 20px 0;
}

.panel-nav a {
  text-decoration: none;
  color: white;
  font-size: 24px;
}

/* BANNER STYLES */
.component-banner-container {
  width: 100%;
  height: 400px; /* Fixed height */
  overflow: hidden;
  position: relative; /* Ensures that absolutely positioned elements are relative to this container */
}

.component-banner-image {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* Ensures the image covers the entire container while maintaining its aspect ratio */
  display: block; /* Remove bottom space under image */
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5); /* Black overlay with 50% opacity */
}

.banner-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  color: white;
  z-index: 1; /* Ensure content is above the overlay */
}

.banner-text {
  margin-bottom: 20px;
}

.banner-button {
  background-color: #dd0000; /* Adjust button styles as needed */
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  color: white;
  font-weight: bold;
  cursor: pointer;
  border-radius: 10px;
  transition: border 0.3s ease;
}

.banner-button:hover {
  border: 2px solid white;
}

/* Media Queries for Responsive Design */
@media (min-width: 768px) {
  .menu .nav li {
    display: block;
    margin-left: 20px;
  }

  .menu .nav .mobile-nav {
    display: none;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const mobileNav = document.querySelector('.mobile-nav a');
  const slidingPanel = document.getElementById('slidingPanel');
  const closePanel = document.querySelector('.close-panel');

  function togglePanel() {
    if (slidingPanel.classList.contains('active')) {
      mobileNav.textContent = 'MENU';
      slidingPanel.classList.remove('active');
    } else {
      mobileNav.textContent = 'CLOSE';
      slidingPanel.classList.add('active');
    }
  }

  mobileNav.addEventListener('click', function (event) {
    event.preventDefault();
    togglePanel();
  });

  closePanel.addEventListener('click', function (event) {
    event.preventDefault();
    togglePanel();
  });
});
</script>

<style>
/* Existing styles */
.component-logo {
background-color: white;
margin: 0 auto; /* Center horizontally in flex container */
text-align: center;
}

.menu {
display: flex;
justify-content: space-between;
align-items: center;
background-color: black;
height: 60px;
padding: 0 15px;
}

.menu nav {
flex: 1;
display: flex;
justify-content: flex-end;
}

.menu .nav {
display: flex;
justify-content: flex-end;
align-items: center;
height: 100%;
}

.menu .nav li {
display: none;
}

.menu .nav li a {
text-decoration: none;
color: white;
}

.menu .nav .mobile-nav {
display: block;
margin-right: 30px; /* Adjust the margin to your preference */
z-index: 2000;
}

.sliding-panel {
position: fixed;
top: 0;
left: 100%;
width: 100%;
height: 100%;
background: black;
display: flex;
justify-content: center;
align-items: center;
transition: left 0.3s ease;
z-index: 1000;
}

.sliding-panel.active {
top: 0;
left: 0;
}

.panel-nav {
list-style: none;
padding: 0;
margin: 0;
text-align: center;
}

.panel-nav li {
display: block;
margin: 20px 0;
}

.panel-nav a {
text-decoration: none;
color: white;
font-size: 24px;
}
</style>


<script>
  document.addEventListener("DOMContentLoaded", function() {
  const mobileNav = document.querySelector('.mobile-nav a');
  const slidingPanel = document.getElementById('slidingPanel');
  const closePanel = document.querySelector('.close-panel');

  function togglePanel() {
    if (slidingPanel.classList.contains('active')) {
      mobileNav.textContent = 'MENU';
      slidingPanel.classList.remove('active');
    } else {
      mobileNav.textContent = 'CLOSE';
      slidingPanel.classList.add('active');
    }
  }

  mobileNav.addEventListener('click', function(event) {
    event.preventDefault();
    togglePanel();
  });

  closePanel.addEventListener('click', function(event) {
    event.preventDefault();
    togglePanel();
  });
});

</script>
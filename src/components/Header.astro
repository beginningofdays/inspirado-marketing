---
const { imageURL } = Astro.props;
---
<header class="flex-row">
  <div class="menu" id="menu">
    <div class="component-logo">
      <a href="/inspirado-marketing/index">
        <img src="/inspirado-marketing/images/inspirado-logo1.png" alt="Inspirado Marketing Logo and homepage link">
      </a>
    </div>
    <nav>
      <ul class="nav">
        <li><a href="/inspirado-marketing/work">OUR WORK</a></li>
        <li><a href="/inspirado-marketing/company">COMPANY</a></li>
        <li><a href="/inspirado-marketing/contact">CONTACT US</a></li>
        <li><a href="/inspirado-marketing/getstarted">GET STARTED</a></li>
        <li class="mobile-nav"><a href="#">MENU</a></li>
      </ul>
    </nav>
  </div>

  <div class="sliding-panel" id="slidingPanel">
    <ul class="panel-nav">
      <li><a href="/inspirado-marketing/work">OUR WORK</a></li>
      <li><a href="/inspirado-marketing/company">COMPANY</a></li>
      <li><a href="/inspirado-marketing/contact">CONTACT US</a></li>
      <li><a href="/inspirado-marketing/getstarted">GET STARTED</a></li>
    </ul>
  </div>
</header>

<div class="flex-column component-banner-container mb-3">
  <div class="component-banner-image">
    <img src={imageURL} alt="Inspirado Marketing, bringing business and community together" class="banner-image" />
    <div class="banner-overlay"></div>
    <div class="banner-content">
      <div class="banner-text">
        <h1><strong>FIND YOUR COMMUNITY AND INCREASE YOUR SALES</strong></h1>
        <p>Helping brands gain competitive an edge within their communties</p>
      </div>
      <a href="/inspirado-marketing/getstarted"><button type="button" class="banner-button">Let's Get Started</button></a>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mobileNav = document.querySelector('.mobile-nav a');
    const slidingPanel = document.getElementById('slidingPanel');
    const closePanel = document.querySelector('.close-panel');

    // Function to toggle the sliding panel
    function togglePanel() {
      if (slidingPanel && mobileNav) { // Check if slidingPanel and mobileNav are not null
        if (slidingPanel.classList.contains('active')) {
          mobileNav.textContent = 'MENU';
          slidingPanel.classList.remove('active');
        } else {
          mobileNav.textContent = 'CLOSE';
          slidingPanel.classList.add('active');
        }
      }
    }

    // Event listener for mobileNav
    if (mobileNav) {
      mobileNav.addEventListener('click', function (event) {
        event.preventDefault();
        togglePanel();
      });
    }

    // Event listener for closePanel
    if (closePanel) {
      closePanel.addEventListener('click', function (event) {
        event.preventDefault();
        togglePanel();
      });
    }
  });
</script>

---
const {imageURL} = Astro.props;
---

<div class="flex-column component-banner-container mb-3">
   <div class="component-banner-image">
    <img src={imageURL} alt="Banner Image" class="banner-image"/>
    <div class="banner-text">Increase Your Sales & Leads Today
        <p>This is more marketing information</p>
    </div>
    <a href="getstarted.html"><data value=""></data><button type="button" class="banner-button">Lets Get Started</button></a>
   </div>
</div> 

<style>

/* absolutely positioned elements are relative to this container */
.component-banner-container {
  width: 100%; /*width*/
  height: 100%; /*height*/
  overflow: hidden;
  position: relative; 
}
/*banner text positioning and transform*/
.banner-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white; /* Adjust text color as needed */
  font-size: 24px; /* Adjust font size as needed */
  text-align: center;
  white-space: nowrap; 
}

/*banner button positioning and styling*/
.banner-button {
  position: absolute;
  bottom: 20px; /* Adjust this value to move the button closer to or further from the bottom */
  left: 50%;
  transform: translateX(-50%);
  background-color: #ffffff; /* Adjust button styles as needed */
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  color:white;
  font-weight:bold;
  cursor: pointer; /*cursor styling*/
  background-color:#dd0000;
  border-radius:10px;
  transition:border 0.3s ease; /*transistion*/ 
}
.banner-button:hover{
  border:2px solid white;
}
</style>

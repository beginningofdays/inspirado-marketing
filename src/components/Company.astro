<style>
.component-company {
  display: flex;
  flex-direction: column;
  margin-bottom: 30px;
}
.component-agency{
  padding:0px;
}
.component-highlight{
  font-weight: 400; 
  font-size: 21px;
}
.team-member-content {
  display: flex;
  flex-direction: row; /* Align items in a row */
  align-items: flex-start; /* Align the text to the top of the image */
  gap: 20px; /* Space between the image and the text */
}
.component-image {
  width: 150px; /* Set width to 150px */
  height: 150px; /* Set height to 150px */
  object-fit: cover; /* Ensure the image covers the area without distortion */
  border-radius: 8px;
}
.team-member-text {
  flex: 1; /* Allow text to take up remaining space */
  text-align: justify;
}
@media (max-width: 768px) {
.team-member-content {
  flex-direction: column; /* Stack image and text vertically on small screens */
  align-items: center;
  text-align: center;
}
.team-member-text {
  margin-left: 0; /* Remove left margin for smaller screens */
}
}
</style>
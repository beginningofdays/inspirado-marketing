---
const {} = Astro.props;
import images from '/public/js/teams.json'; // Ensure this path is correct relative to the component's location
---
<div class="component-company flex-column mb-3">

    <div class="title-wrapper">
        <div class="line"></div>
        <h2>Company</h2>
        <div class="line"></div>
    </div>

    <div class="">    
        <p>Marketing agency from Cork. We are the marketing
            partner of growing and established businesses. We provide comprehensive marketing solutions to help you achieve your goals.
        </p>
    </div>
    
    <div class="component-team-container">
        <h2>The Team</h2>
        <p>Our hard-working team at Inspirado Marketing</p>
        <div class="component-team-member">
            {images[0] && (
                <img src={images[0].src} alt={images[0].alt} class="component-image" /> 
            )}
            <p>Albert Gillick (CEO)</p>
        </div>
    </div> 
</div>

<style>
    .component-company {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .component-team-container {
        margin-top: 20px;
    }

    .component-team-member {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-top: 20px;
    }

    .component-image {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border:1px solid gray
    }

    .component-team-member p {
        margin-top: 10px;
        font-size: 16px;
        text-align: center;
    }


    .title-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    box-sizing: border-box;
}

.title-wrapper h2 {
    margin: 0 1rem; /* Add some space between the lines and the text */
    word-wrap: break-word; /* Break words if necessary */
    word-break: break-word; /* Ensure long words break to fit container */
}

.line {
    flex-grow: 1;
    height: 2px; /* Line height */
    background: #1c4880; /* Dark blue color for the line */
}
  
</style>

